/**
 * Global Teardown for E2E Docker Tests
 * Runs once after all tests
 *
 * Generated by: create-e2e-docker
 */

import { FullConfig, FullResult } from "@playwright/test";

async function globalTeardown(config: FullConfig, result: FullResult) {
  console.log("\n========================================");
  console.log("  E2E Docker Tests - Global Teardown");
  console.log("  Project: <%= projectName %>");
  console.log("========================================\n");

  const status = result.status;
  const statusEmoji = status === "passed" ? "PASSED" : status === "failed" ? "FAILED" : "TIMED OUT";

  console.log(`Final Status: ${statusEmoji}`);
  console.log(`Duration: ${Math.round(result.startTime.getTime() / 1000)}s`);

  console.log("\nReports generated:");
  console.log("  - HTML: <%= testing.reportDir %>/playwright-report/index.html");
  console.log("  - JSON: <%= testing.reportDir %>/results.json");
  console.log("");

  // Note: Container cleanup is handled by the run-e2e.sh script
}

export default globalTeardown;
